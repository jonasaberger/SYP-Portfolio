---
import { Image } from 'astro:assets';
import Button from "../ui/button/Button.astro";
import { projects } from "../../data/projects";

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full py-10">
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-8 md:mb-12 text-foreground">{title}</h2>
    )}

    <div class="grid grid-cols-1 gap-6 md:gap-8">
      {projects.map((p) => (
        <article class="card-surface p-4 md:p-6 rounded-lg relative flex flex-col md:flex-row items-center md:items-start gap-6 md:gap-8 lg:gap-12 overflow-hidden">
          
          {/* Project Image */}
          {p.image && (
            <div class="w-full md:w-2/5 lg:w-1/3 flex-shrink-0">
              <Image
                src={p.image}
                format="png"
                alt={p.title}
                width={400}
                height={300}
                class="w-full h-auto rounded-lg object-cover shadow-md"
                loading="lazy"
              />
            </div>
          )}

          {/* Card Content */}
          <div class="flex-1 w-full min-w-0"> {/* min-w-0 prevents flex overflow */}
            <div class="absolute right-4 top-4 text-[var(--accent)] [&>svg]:w-5 [&>svg]:h-5 md:[&>svg]:w-6 md:[&>svg]:h-6" set:html={p.icon} />
            
            {/* Title and tech stack */}
            <div class="pr-8 md:pr-10"> {/* Prevents text overlap with icon */}
              <h3 class="text-lg md:text-xl font-semibold text-foreground m-0 break-words">{p.title}</h3>
              <p class="text-xs md:text-sm text-[color:var(--color-text-muted)] m-0 mt-1 break-words">{p.techStack}</p>
            </div>

            {/* Description with proper text wrapping */}
            <div class="mt-4 space-y-2 md:space-y-3">
              {p.description.split("\n").map((line, index) => (
                <p 
                  class="text-sm md:text-base text-[color:var(--color-text-secondary)] leading-relaxed break-words"
                  
                >
                  {line}
                </p>
              ))}
            </div>

            {/* Button container */}
            <div class="mt-6 flex justify-start">
              <Button href={p.ctaLink} variant="primary" size="sm">{p.ctaText}</Button>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  /* Ensure text never overflows */
  .break-words {
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  /* Mobile-first responsive adjustments */
  @media (max-width: 768px) {
    .card-surface {
      padding: 1rem;
    }
  }
</style>