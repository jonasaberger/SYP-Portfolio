---
import { Image } from 'astro:assets';
import Button from "../ui/button/Button.astro";
import { projects } from "../../data/projects";

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full py-10">
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-8 text-foreground">{title}</h2>
    )}

    <div class="grid grid-cols-1 gap-6">
      {projects.map((p) => (
        <article class="card-surface p-6 relative flex flex-col md:flex-row items-center md:items-start gap-6">
          
          {/* Project Image */}
          {p.image && (
            <div class="w-full md:w-1/3">
              <Image
                src={p.image}
                format="png"
                alt={p.title}
                width={400}
                height={300}
                class="rounded-lg object-cover shadow-md"
              />
            </div>
          )}



          

          {/* Card Content */}
          <div class="flex-1">
            <div class="absolute right-4 top-4 text-[var(--accent)] [&>svg]:w-6 [&>svg]:h-6" set:html={p.icon} />
            <h3 class="text-xl font-semibold text-foreground m-0">{p.title}</h3>
            <p class="text-sm text-[color:var(--color-text-muted)] m-0">{p.techStack}</p>

            {/* Split description by line breaks */}
            {p.description.split("\n").map((line) => (
              <p class="mt-3 text-[color:var(--color-text-secondary)]">{line}</p>
            ))}

            <div class="mt-6 flex justify-start md:justify-start">
              <Button href={p.ctaLink} variant="primary" size="sm">{p.ctaText}</Button>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
