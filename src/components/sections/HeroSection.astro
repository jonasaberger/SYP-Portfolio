---
import { Image } from 'astro:assets';
import Button from "../ui/button/Button.astro";
interface Cta {
  text: string;
  href: string;
}

interface Props {
  title: string;
  subtitle?: string;
  showCTA?: boolean;
  image?: ImageMetadata;
  primaryCTA?: Cta;
  secondaryCTA?: Cta;
}

const {
  title,
  subtitle,
  image,
  showCTA = false,
  primaryCTA,
  secondaryCTA,
} = Astro.props as Props;
---

<section class="w-full py-6 md:py-10">
  <div class="mx-auto max-w-5xl px-4">
    <!-- layout: stack on small screens, side-by-side on md+ -->
    <div class="flex flex-col md:flex-row items-center md:items-center gap-6 text-center md:text-left">
      {image && (
        <div class="w-72 h-72 md:w-72 md:h-72  overflow-hidden flex-shrink-0 mx-auto md:mx-0">
          <Image
            src={image}
            alt={title ?? "Profile image"}
            format="jpg"
            width={537}
            height={750}
            class="object-cover w-full h-full"
          />
        </div>
      )}

      <div class="flex-1">
        <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight text-foreground">
          <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">{title}</span>
        </h1>

        {subtitle && (
          <p class="mt-4 italic text-lg md:text-xl text-[color:var(--color-text-secondary)] max-w-2xl mx-auto md:mx-0">
            {subtitle}
          </p>
        )}

        {showCTA && (primaryCTA || secondaryCTA) && (
          <div class="mt-8 flex flex-col sm:flex-row items-center justify-center md:justify-start gap-3">
            {primaryCTA && (
              <Button href={primaryCTA.href} variant="primary" size="md">{primaryCTA.text}</Button>
            )}
            {secondaryCTA && (
              <Button href={secondaryCTA.href} variant="secondary" size="md">{secondaryCTA.text}</Button>
            )}
          </div>
        )}
      </div>
    </div>
  </div>
  
</section>


