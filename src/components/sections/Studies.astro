---
interface StudyItem {
  title: string;
  institution: string;
  description: string;
  year?: string;
  tags?: string[];
  badgeImage: string; // URL des Badge-Bildes
  badgeAlt?: string;  // Alt-Text
  url?: string;       // Optionaler Link, wenn das Bild klickbar sein soll
}

interface Props {
  items: StudyItem[];
  title?: string;
}

const { items, title } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground">
        {title}
      </h2>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
      {items.map((study) => (
        <article class="card-surface p-6 flex flex-col">
          {/* Header mit Titel links und Badge rechts - enger zusammengerückt */}
          <div class="flex items-start justify-between gap-x-4">
            <div class="flex-1 min-w-0">
              <h3 class="text-xl font-semibold text-foreground">{study.title}</h3>
              <div class="mt-1 text-sm text-[color:var(--color-text-secondary)]">
                {study.institution}
              </div>
            </div>

            {/* Badge mit einheitlicher Größe */}
            <div class="flex-shrink-0">
              {study.url ? (
                <a href={study.url} target="_blank" rel="noopener noreferrer">
                  <img
                    src={study.badgeImage}
                    alt={study.badgeAlt ?? study.title}
                    class="w-16 h-16 object-contain rounded-md shadow-md"
                    width="64"
                    height="64"
                  />
                </a>
              ) : (
                <img
                  src={study.badgeImage}
                  alt={study.badgeAlt ?? study.title}
                  class="w-16 h-16 object-contain rounded-md shadow-md"
                  width="64"
                  height="64"
                />
              )}
            </div>
          </div>

          <p class="mt-4 text-[color:var(--color-text-secondary)]">{study.description}</p>

          {study.tags && study.tags.length > 0 && (
            <div class="mt-4 flex flex-wrap gap-2">
              {study.tags.map((tag) => (
                <span
                  class="inline-flex items-center rounded-full px-3 py-1 text-xs font-medium"
                  style="background: rgba(var(--accent-rgb),0.1); color: var(--accent); border: 1px solid rgba(var(--accent-rgb),0.3);"
                >
                  {tag}
                </span>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </div>
</section>